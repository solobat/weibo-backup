{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "ES2018",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDirs": [
      "src",
      "test"
    ],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "typeRoots": [
      "./typings"
    ],
  }
}